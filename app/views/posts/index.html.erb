<!-- app/views/posts/index.html.erb -->
<h1>Posts</h1>

<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Published At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.published_at.strftime("%B %d, %Y %H:%M") if post.published_at %></td>
        
        <td><%= link_to 'Show', post_path(post), class: 'btn btn-info' %></td>
        
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %></td>
        
        <td><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>